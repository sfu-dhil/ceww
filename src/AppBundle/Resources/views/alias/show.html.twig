{% extends 'base.html.twig' %}

{% block title %}{{ alias.name }}{% endblock %}

{% block pageheader %} 
    <h1>{{ alias.name }}</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('alias_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <a href="{{ path('alias_edit', { 'id': alias.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                {% if is_granted('ROLE_CONTENT_ADMIN') %}
                    <a href="{{ path('alias_delete', { 'id': alias.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Alias?">
                        <span class='glyphicon glyphicon-remove'></span> Delete
                    </a>
                {% endif %}
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Complete alias (full name) of the listed person" data-trigger="hover" data-placement="bottom">Name</a></th>
                <td>{{ alias.name }}</td>
            </tr>
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Is the name at birth?" data-trigger="hover" data-placement="bottom">Birth Name</a></th>
                <td>{% if alias.maiden %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Notes about the entry" data-trigger="hover" data-placement="bottom">Notes</a></th>
                <td>{{ alias.description|raw }}</td>
            </tr>
            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <tr>
                    <th><a href="#" onClick="return false;" data-toggle="popover" data-content="These notes are only available to logged-in users" data-trigger="hover" data-placement="bottom">Research Notes</a></th>
                    <td>{{ alias.notes|raw }}</td>
                </tr>
            {% endif %}
            <tr>
                <th><a href="#" onClick="return false;" data-toggle="popover" data-content="Person to whom entry refers" data-trigger="hover" data-placement="bottom">People</a></th>         
                <td>
                    {% if alias.people | length > 0 %}
                        <ul>
                            {% for person in alias.people %}
                                <li>
                                {% embed 'AppBundle:person:partial/link.html.twig' %}
                                {% endembed %}
                                </li>
                            {% endfor %} 
                        </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>

    {% include 'NinesFeedbackBundle:Comment:comment-interface.html.twig' with { 'entity': alias } %}				
    
{% endblock %}
