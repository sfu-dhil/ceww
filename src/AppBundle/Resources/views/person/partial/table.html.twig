<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Born</th>
            <th>Deceased</th>
        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    {% embed 'AppBundle:person:partial/link.html.twig' %}
                    {% endembed %}
                </td>   
                <td>{{ person.birthDate }}</td>
                <td>{{ person.deathDate }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
