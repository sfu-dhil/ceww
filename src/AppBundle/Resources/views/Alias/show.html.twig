{% extends 'base.html.twig' %}

{% block title %}Alias{% endblock %}

 {% block pageheader %} 
    <h1>Alias</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('alias_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('alias_edit', { 'id': alias.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('alias_delete', { 'id': alias.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Alias?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Name</th>
                <td>{{ alias.name }}</td>
            </tr><tr>
                <th>Maiden</th>
                <td>{% if alias.maiden %}Yes{% else %}No{% endif %}</td>
            </tr><tr>
                <th>Description</th>
                <td>{{ alias.description }}</td>
            </tr><tr>
                <th>Notes</th>
                <td>{{ alias.notes }}</td>
            </tr><tr>
                <th>Created</th>
                <td>{% if alias.created %}{{ alias.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if alias.updated %}{{ alias.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
            <tr>
                <th>People</th>         
                <td>
                    {% if alias.people | length > 0 %}
                    <ul>
                        {% for people in alias.people %}
                        <li>
                            <a href="{{ path("people_show", {"id":people.id}) }}">
                                {{ people }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
