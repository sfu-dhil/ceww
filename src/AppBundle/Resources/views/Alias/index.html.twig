{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Alternate Name List</h1>
    <p class="count">
        Displaying {{ aliases|length }} aliases of {{ aliases.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('alias_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
            <a href="{{ path('alias_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Maiden</th>
                <th>Created</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody>
            {% for alias in aliases %}
                <tr>
                    <td>
                        <a href="{{ path('alias_show', { 'id': alias.id }) }}">
                            {{ alias.name }}
                        </a>
                    </td>
                    <td>{% if alias.maiden %}Yes{% else %}No{% endif %}</td>
                    <td>{% if alias.created %}{{ alias.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if alias.updated %}{{ alias.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(aliases) }}
    </div>

{% endblock %}
