{% extends 'base.html.twig' %}

{% block title %}Publisher Search{% endblock %}

{% block pageheader %}
    <h1>Publisher Search</h1>
    {% include 'AppBundle:misc:search-header.html.twig' with {'results': publishers} %}
{% endblock %}

{% block body %}

    {% include 'AppBundle:misc:search-form.html.twig'
        with {'search_path': 'publisher_search'} %}

    {% if q %}

        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {% for publisher in publishers %}
                    <tr>
                        <td>
                            <a href="{{ path('publisher_show', { 'id': publisher.id }) }}">
                                {{ publisher.name }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% include 'AppBundle:misc:search-footer.html.twig' with {'results': publishers} %}
    {% endif %}

{% endblock %}
