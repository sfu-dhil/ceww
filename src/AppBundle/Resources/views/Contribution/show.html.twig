{% extends 'base.html.twig' %}

{% block title %}Contribution{% endblock %}

 {% block pageheader %} 
    <h1>Contribution</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('contribution_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('contribution_edit', { 'id': contribution.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('contribution_delete', { 'id': contribution.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Contribution?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Created</th>
                <td>{% if contribution.created %}{{ contribution.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if contribution.updated %}{{ contribution.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Role</th>
                <td>
                    <a href="{{ path('role_show', { 'id': contribution.role.id}) }}">
                        {{ contribution.role }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Person</th>
                <td>
                    <a href="{{ path('person_show', { 'id': contribution.person.id}) }}">
                        {{ contribution.person }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Publication</th>
                <td>
                    <a href="{{ path('publication_show', { 'id': contribution.publication.id}) }}">
                        {{ contribution.publication }}
                    </a>
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
