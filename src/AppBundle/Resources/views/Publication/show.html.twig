{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

 {% block pageheader %} 
    <h1>Publication</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('publication_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('publication_edit', { 'id': publication.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('publication_delete', { 'id': publication.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Publication?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Title</th>
                <td>{{ publication.title }}</td>
            </tr><tr>
                <th>Sortable Title</th>
                <td>{{ publication.sortableTitle }}</td>
            </tr><tr>
                <th>Links</th>
                <td>{% if publication.links %}{{ publication.links|join(', ') }}{% endif %}</td>
            </tr><tr>
                <th>Description</th>
                <td>{{ publication.description }}</td>
            </tr><tr>
                <th>Notes</th>
                <td>{{ publication.notes }}</td>
            </tr><tr>
                <th>Created</th>
                <td>{% if publication.created %}{{ publication.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if publication.updated %}{{ publication.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Location</th>
                <td>
                    <a href="{{ path('location_show', { 'id': publication.location.id}) }}">
                        {{ publication.location }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Genres</th>         
                <td>
                    {% if publication.genres | length > 0 %}
                    <ul>
                        {% for genres in publication.genres %}
                        <li>
                            <a href="{{ path("genres_show", {"id":genres.id}) }}">
                                {{ genres }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
    {% if publication.contributions | length > 0 %}    
    <h2>Contributions</h2>
    <ul>
        {% for contributions in publication.contributions %}
        <li>
            <a href="{{ path("contributions_show", {"id":contributions.id}) }}">
                {{ contributions }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
