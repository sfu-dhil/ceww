{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block pageheader %} 
    <h1>Book</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('book_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('book_edit', { 'id': book.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('book_delete', { 'id': book.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Book?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr><tr>
                <th>Sortable Title</th>
                <td>{{ book.sortableTitle }}</td>
            </tr><tr>
                <th>Links</th>
                <td>{% if book.links %}{{ book.links|join(', ') }}{% endif %}</td>
            </tr><tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr> 
            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <tr>
                    <th>Notes</th>
                    <td>{{ book.notes | nl2br }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Created</th>
                <td>{% if book.created %}{{ book.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if book.updated %}{{ book.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
                
    {% if book.contributions | length > 0 %}    
        <h2>Contributions</h2>
        <ul>
            {% for contribution in book.contributions %}
                <li>
                    <i>{{ contribution.role }}</i>, 
                    <a href='{{ path('person_show', {'id': contribution.person.id}) }}'>
                        {{ contribution.person }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
                
{% endblock %}
