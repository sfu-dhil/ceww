{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block pageheader %} 
    <h1>Person</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('person_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('person_edit', { 'id': person.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('person_delete', { 'id': person.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Person?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Full Name</th>
                <td>{{ person.fullName }}</td>
            </tr><tr>
                <th>Sortable Name</th>
                <td>{{ person.sortableName }}</td>
            </tr><tr>
                <th>Description</th>
                <td>{{ person.description }}</td>
            </tr>
            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <tr>
                    <th>Notes</th>
                    <td>{{ perosn.notes | nl2br }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Created</th>
                <td>{% if person.created %}{{ person.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if person.updated %}{{ person.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Birthplace</th>
                <td>
                    {% if person.birthPlace %}
                        <a href="{{ path('place_show', { 'id': person.birthPlace.id}) }}">
                            {{ person.birthPlace }}
                        </a>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Deathplace</th>
                <td>
                    {% if person.deathPlace %}
                        <a href="{{ path('place_show', { 'id': person.deathPlace.id}) }}">
                            {{ person.deathPlace }}
                        </a>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Residences</th>         
                <td>
                    {% if person.residences | length > 0 %}
                        <ul>
                            {% for residences in person.residences %}
                                <li>
                                    <a href="{{ path("place_show", {"id":residences.id}) }}">
                                        {{ residences }}
                                    </a>
                                </li>
                            {% endfor %} 
                        </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Aliases</th>         
                <td>
                    {% if person.aliases | length > 0 %}
                        <ul>
                            {% for aliases in person.aliases %}
                                <li>
                                    <a href="{{ path("alias_show", {"id":aliases.id}) }}">
                                        {{ aliases }}
                                    </a>
                                </li>
                            {% endfor %} 
                        </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
    {% if person.contributions | length > 0 %}    
        <h2>Contributions</h2>
        <ul>
            {% for contribution in person.contributions %}
                <li>
                    {% include 'AppBundle:Contribution:partial/link.html.twig' with { 'contribution': contribution, 'render': '<i>{{ contribution.role }}</i>, {{ contribution.publication }}' } %}
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
{% endblock %}
