{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

 {% block pageheader %} 
    <h1>Person</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('person_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('person_edit', { 'id': person.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('person_delete', { 'id': person.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Person?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Full Name</th>
                <td>{{ person.fullName }}</td>
            </tr><tr>
                <th>Sortable Name</th>
                <td>{{ person.sortableName }}</td>
            </tr><tr>
                <th>Description</th>
                <td>{{ person.description }}</td>
            </tr><tr>
                <th>Notes</th>
                <td>{{ person.notes }}</td>
            </tr><tr>
                <th>Created</th>
                <td>{% if person.created %}{{ person.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if person.updated %}{{ person.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Birthplace</th>
                <td>
                    <a href="{{ path('birthPlace_show', { 'id': person.birthPlace.id}) }}">
                        {{ person.birthPlace }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Deathplace</th>
                <td>
                    <a href="{{ path('deathPlace_show', { 'id': person.deathPlace.id}) }}">
                        {{ person.deathPlace }}
                    </a>
                </td>
            </tr>        
            <tr>
                <th>Residences</th>         
                <td>
                    {% if person.residences | length > 0 %}
                    <ul>
                        {% for residences in person.residences %}
                        <li>
                            <a href="{{ path("residences_show", {"id":residences.id}) }}">
                                {{ residences }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
            <tr>
                <th>Aliases</th>         
                <td>
                    {% if person.aliases | length > 0 %}
                    <ul>
                        {% for aliases in person.aliases %}
                        <li>
                            <a href="{{ path("aliases_show", {"id":aliases.id}) }}">
                                {{ aliases }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
    {% if person.contributions | length > 0 %}    
    <h2>Contributions</h2>
    <ul>
        {% for contributions in person.contributions %}
        <li>
            <a href="{{ path("contributions_show", {"id":contributions.id}) }}">
                {{ contributions }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
