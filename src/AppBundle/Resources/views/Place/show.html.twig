{% extends 'base.html.twig' %}

{% block title %}Place{% endblock %}

 {% block pageheader %} 
    <h1>Place</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('place_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('place_edit', { 'id': place.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('place_delete', { 'id': place.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Place?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Name</th>
                <td>{{ place.name }}</td>
            </tr><tr>
                <th>Alternate Names</th>
                <td>{% if place.alternateNames %}{{ place.alternateNames|join(', ') }}{% endif %}</td>
            </tr><tr>
                <th>Country Name</th>
                <td>{{ place.countryName }}</td>
            </tr><tr>
                <th>Admin Names</th>
                <td>{% if place.adminNames %}{{ place.adminNames|join(', ') }}{% endif %}</td>
            </tr><tr>
                <th>Latitude</th>
                <td>{{ place.latitude }}</td>
            </tr><tr>
                <th>Longitude</th>
                <td>{{ place.longitude }}</td>
            </tr><tr>
                <th>Description</th>
                <td>{{ place.description }}</td>
            </tr>
            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <tr>
                    <th>Notes</th>
                    <td>{{ place.notes | nl2br }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Created</th>
                <td>{% if place.created %}{{ place.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if place.updated %}{{ place.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Residents</th>         
                <td>
                    {% if place.residents | length > 0 %}
                    <ul>
                        {% for person in place.residents %}
                        <li>
                            <a href="{{ path("person_show", {"id":person.id}) }}">
                                {{ person }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
    {% if place.peopleBorn | length > 0 %}    
    <h2>Peopleborn</h2>
    <ul>
        {% for person in place.peopleBorn %}
        <li>
            <a href="{{ path("person_show", {"id":person.id}) }}">
                {{ person }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if place.peopleDied | length > 0 %}    
    <h2>Peopledied</h2>
    <ul>
        {% for person in place.peopleDied %}
        <li>
            <a href="{{ path("person_show", {"id":person.id}) }}">
                {{ person }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    {% if place.publications | length > 0 %}    
    <h2>Publications</h2>
    <ul>
        {% for publication in place.publications %}
        <li>
            {% include 'AppBundle:Publication:partial/link.html.twig' with { 'publication': publication, 'render': '{{ publication }}' } %}
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
    
    {% include 'NinesFeedbackBundle:Comment:comment-interface.html.twig' with { 'entity': place } %}				
    
{% endblock %}
