{% extends 'base.html.twig' %}

{% block title %}places{% endblock %}

{% block pageheader %}
    <h1>Place List</h1>
    <p class="count">
        Displaying {{ places|length }} places of {{ places.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('place_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
            <a href="{{ path('place_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr><th>Name</th><th>Alternate Names</th><th>Country Name</th><th>Admin Names</th><th>Latitude</th><th>Longitude</th><th>Description</th><th>Notes</th><th>Created</th><th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>
                    <a href="{{ path('place_show', { 'id': place.id }) }}">
                        {{ place.name }}
                    </a>
                </td>
                <td>{% if place.alternateNames %}{{ place.alternateNames|join(', ') }}{% endif %}</td>
                <td>{{ place.countryName }}</td>
                <td>{% if place.adminNames %}{{ place.adminNames|join(', ') }}{% endif %}</td>
                <td>{{ place.latitude }}</td>
                <td>{{ place.longitude }}</td>
                <td>{{ place.description }}</td>
                <td>{{ place.notes }}</td>
                <td>{% if place.created %}{{ place.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if place.updated %}{{ place.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(places) }}
    </div>

{% endblock %}
