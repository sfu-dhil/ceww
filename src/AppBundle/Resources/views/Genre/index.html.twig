{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Genre List</h1>
    <p class="count">
        Displaying {{ genres|length }} genres of {{ genres.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('genre_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New
                </a>
            {% endif %}
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Label</th>
                <th>Created</th>
                <th>Updated</th>     
            </tr>
        </thead>
        <tbody>
            {% for genre in genres %}
                <tr>                    
                    <td>
                        <a href="{{ path('genre_show', { 'id': genre.id }) }}">
                            {{ genre.name}}
                        </a>
                    </td>
                    <td>{{ genre.label }}</td>
                    <td>{% if genre.created %}{{ genre.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if genre.updated %}{{ genre.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(genres) }}
    </div>

{% endblock %}
