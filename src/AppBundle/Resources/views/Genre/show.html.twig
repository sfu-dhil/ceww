{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

 {% block pageheader %} 
    <h1>Genre</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('genre_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('genre_edit', { 'id': genre.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('genre_delete', { 'id': genre.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Genre?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Created</th>
                <td>{% if genre.created %}{{ genre.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if genre.updated %}{{ genre.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
            <tr>
                <th>Publications</th>         
                <td>
                    {% if genre.publications | length > 0 %}
                    <ul>
                        {% for publications in genre.publications %}
                        <li>
                            <a href="{{ path("publications_show", {"id":publications.id}) }}">
                                {{ publications }}
                            </a>
                        </li>
                        {% endfor %} 
                    </ul>
                    {% endif %}
                </td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
