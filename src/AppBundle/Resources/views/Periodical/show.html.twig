{% extends 'base.html.twig' %}

{% block title %}Periodical{% endblock %}

 {% block pageheader %} 
    <h1>Periodical</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('periodical_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('periodical_edit', { 'id': periodical.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('periodical_delete', { 'id': periodical.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Periodical?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Title</th>
                <td>{{ periodical.title }}</td>
            </tr><tr>
                <th>Sortable Title</th>
                <td>{{ periodical.sortableTitle }}</td>
            </tr><tr>
                <th>Links</th>
                <td>{% if periodical.links %}{{ periodical.links|join(', ') }}{% endif %}</td>
            </tr><tr>
                <th>Description</th>
                <td>{{ periodical.description }}</td>
            </tr><tr>
                <th>Location</th>
                <td><a href="{{ path('place_show', {'id': periodical.location.id}) }}">{{ periodical.location }}</a></td>
            </tr><tr>
                <th>Notes</th>
                <td>{{ periodical.notes }}</td>
            </tr><tr>
                <th>Run Dates</th>
                <td>{{ periodical.runDates }}</td>
            </tr><tr>
                <th>Continued From</th>
                <td>{{ periodical.continuedFrom }}</td>
            </tr><tr>
                <th>Continued By</th>
                <td>{{ periodical.continuedBy }}</td>
            </tr><tr>
                <th>Created</th>
                <td>{% if periodical.created %}{{ periodical.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if periodical.updated %}{{ periodical.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
