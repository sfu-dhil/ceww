{% extends 'base.html.twig' %}

{% block title %}Compilation{% endblock %}

 {% block pageheader %} 
    <h1>Compilation</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('compilation_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('compilation_edit', { 'id': compilation.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('compilation_delete', { 'id': compilation.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Compilation?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Created</th>
                <td>{% if compilation.created %}{{ compilation.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if compilation.updated %}{{ compilation.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
{% endblock %}
