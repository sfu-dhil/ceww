{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block pageheader %} 
    <h1>Role</h1>
{% endblock %} 

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('role_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('role_edit', { 'id': role.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                <a href="{{ path('role_delete', { 'id': role.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Role?">
                    <span class='glyphicon glyphicon-remove'></span> Delete
                </a>
            {% endif %}
        </div>
    </div>

    {{ include('NinesUtilBundle:Term:partial/show.html.twig', { 'term': role }) }}

    {% if role.contributions | length > 0 %}    
        <h2>Contributions</h2>
        <ul>
            {% for contributions in role.contributions %}
                <li>
                    <a href="{{ path("contributions_show", {"id":contributions.id}) }}">
                        {{ contributions }}
                    </a>
                </li>
            {% endfor %} 
        </ul>
    {% endif %}
{% endblock %}
