{% extends 'base.html.twig' %}

{% block title %}genres{% endblock %}

{% block pageheader %}
    <h1>Genre List</h1>
    <p class="count">
        Displaying {{ genres|length }} genres of {{ genres.getTotalItemCount }} total.
    </p>
 {% endblock %}

{% block body %}

    <div class='btn-toolbar pb-1'>
        <div class='btn-group ms-auto'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('genre_new') }}" class="btn btn-light">
                <span class="bi bi-plus-lg"></span> New
            </a>
            {% endif %}
        </div>
    </div>

    {{ include('@NinesUtil/term/partial/index.html.twig', { 'terms': genres, 'path': 'genre_show' }) }}

    <div class="navigation">
        {{ knp_pagination_render(genres) }}
    </div>

{% endblock %}
