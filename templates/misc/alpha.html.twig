<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        {% for letter in 'A' .. 'Z' %}
            {% set class='' %}
            {% if letter in letters %}
                {% set class='active' %}
            {% endif %}
            <li class="page-item"><a class="page-link {{ class }}" href="?alpha={{ letter }}">{{ letter }}</a></li>
        {% endfor %}
    </ul>
</nav>
