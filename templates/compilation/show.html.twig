{% extends 'base.html.twig' %}

{% block title %}{{ compilation.title }}{% endblock %}

{% block pageheader %}
    <h1>{{ compilation.title }}</h1>
    {% embed 'publication/partial/browse.html.twig' %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('compilation_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <a href="{{ path('compilation_edit', { 'id': compilation.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
                {% if is_granted('ROLE_CONTENT_ADMIN') %}
                    <a href="{{ path('compilation_delete', { 'id': compilation.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Collection?">
                        <span class='glyphicon glyphicon-remove'></span> Delete
                    </a>
                {% endif %}
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th><span data-toggle="popover" data-content="Full title of the work" data-trigger="hover" data-placement="bottom">Title</span></th>
                <td>{{ compilation.title }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Year work published" data-trigger="hover" data-placement="bottom">Date</span></th>
                <td>{{ compilation.dateYear }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Place of publication" data-trigger="hover" data-placement="bottom">Location</span></th>
                <td>{{ compilation.location }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Publisher(s) of the work" data-trigger="hover" data-placement="bottom">Publisher</span></th>
                <td>
                    {% if compilation.publishers|length > 0 %}
                        <ul>
                            {% for publisher in compilation.publishers %}
                                <li>
                                    <a href="{{ path('publisher_show', {'id': publisher.id}) }}">{{ publisher }}</a>
                                </li>
                                {% endfor %}
                        </ul>
                        {% endif %}
                </td>
            </tr>
            {% if is_granted('ROLE_USER') %}
                <tr>
                    <th><span data-toggle="popover" data-content="Name sorting (lowercase). Not visible to public." data-trigger="hover" data-placement="bottom">Sortable Title</span></th>
                    <td>{{ compilation.sortableTitle }}</td>
                </tr>
            {% endif %}

            <tr>
                <th>Links</th>
                <td>
                    {% include '@NinesMedia/link/partial/list.html.twig' with {'entity': compilation} %}
                </td>
            </tr>

            {% if is_granted('ROLE_USER') %}
                <tr>
                    <th>Old Links</th>
                    <td>
                        {% if compilation.oldLinks | length > 0 %}
                            <ul>
                                {% for link in compilation.oldLinks %}
                                    <li>
                                        <a href="{{ link }}">{{ link }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                        <p><i>Only shown to users who have logged in.</i></p>
                    </td>
                </tr>
            {% endif %}
            <tr>
                <th><span data-toggle="popover" data-content="Notes about the entry" data-trigger="hover" data-placement="bottom">Notes</span></th>
                <td>{{ compilation.description|raw }}</td>
            </tr>
            <tr>
                <th><span data-toggle="popover" data-content="Category of work" data-trigger="hover" data-placement="bottom">Genres</span></th>
                <td>
                    {% if compilation.genres | length > 0 %}
                        <ul>
                            {% for genre in compilation.genres %}
                                <li>
                                    <a href="{{ path('genre_show', {'id': genre.id}) }}">
                                        {{ genre }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>

            {% if is_granted('ROLE_CONTENT_EDITOR') %}
                <tr>
                    <th><span data-toggle="popover" data-content="These notes are only available to logged-in users" data-trigger="hover" data-placement="bottom">Research Notes</span></th>
                    <td>{{ compilation.notes|raw }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>

    {% if compilation.contributions | length > 0 %}
        <h2>Contributors</h2>
        <ul>
            {% for contribution in compilation.contributions %}
                <li>
                    {% if contribution.role.name != 'author' %}
                        <i>{{ contribution.role }}</i>,
                    {% endif %}
                    {% embed 'person/partial/link.html.twig' with {'person': contribution.person} %}
                    {% endembed %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% include '@NinesFeedback/comment/comment-interface.html.twig' with { 'entity': compilation } %}

{% endblock %}
