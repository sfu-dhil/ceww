{% extends 'base.html.twig' %}

{% block title %}Periodical Contributions List{% endblock %}

{% block body %}
    <h1>Periodical Contributions List</h1>
    <p class="count">
        Displaying contributions for <em>{{periodical.title}}</em>.
    </p>

    <div class="btn-toolbar pb-1">
        <div class="btn-group ms-auto">
                <a href="{{ path('periodical_new_contribution', { 'id': periodical.id }) }}" class="btn btn-primary">
                    <span class="bi bi-plus-lg"></span> Contribution
                </a>
                <a href="{{ path('periodical_edit', { 'id': periodical.id }) }}" class="btn btn-light">Back</a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Role</th>
                <th>Contributor</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for contribution in periodical.contributions %}
                <tr>
                    <td>{{ contribution.role }}</td>
                    <td><a href="{{ path('person_show', {'id': contribution.person.id}) }}">{{ contribution.person }}</a></td>
                    <td>
                        <div class="btn-toolbar pb-1">
                            <div class="btn-group">
                                    <a href="{{ path('periodical_edit_contributions', { 'id': contribution.id }) }}" class="btn btn-light">
                                        <span class='bi bi-pencil-square'></span> Edit
                                    </a>
                                    <a href="{{ path('periodical_delete_contributions', { 'id': contribution.id }) }}" class="btn btn-danger" data-confirm="Are you sure you want to delete this Contribution?">
                                            <span class=' bi bi-trash'></span> Delete
                                    </a>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}