{% extends 'base.html.twig' %}

{% block title %}New Book{% endblock %}


{% block body %}
    <h1>Book Creation</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="form-group">
        <div class="col-sm-2"></div>

        <div class='btn-toolbar pb-1'>
            <div class='btn-group me-auto'>
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="{{ path('book_index') }}" class="btn btn-warning">Cancel</a>
            </div>
        </div>

        <div class='btn-toolbar pb-1'>
            <div class='btn-group ms-auto'>
                <a href="{{ path('place_new') }}" class="btn btn-primary" target="_blank"><span class="bi bi-plus-lg"></span> Place</a>
                <a href="{{ path('person_new') }}" class="btn btn-primary" target="_blank"><span class="bi bi-plus-lg"></span> Person</a>
                <a href="{{ path('publisher_new') }}" class="btn btn-primary" id="newPublisher" target="_blank"><span class="bi bi-plus-lg"></span> Publisher</a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {% include '@NinesEditor/editor/widget.html.twig' %}
{% endblock %}
