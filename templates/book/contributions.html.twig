{% extends 'base.html.twig' %}

{% block title %}Book Edit{% endblock %}

{% block body %}
    <h1>Edit contributors</h1>

    <p>Use the form below to edit contributors for <i>{{ book }}</i>.</p>
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
	<div class="form-group">
		<div class="col-sm-2"></div>
		<div class="col-sm-10">
			<input type="submit" value="Update" class="btn btn-primary" />
			<a href="{{ path('book_show', { 'id': book.id }) }}" class="btn btn-warning">Cancel</a>
		</div>
	</div>
    {{ form_end(edit_form) }}

{% endblock %}

{% block javascripts %}
    {% include '@NinesEditor/editor/widget.html.twig' %}
{% endblock %}