{% extends 'base.html.twig' %}

{% block title %}Alternate Names{% endblock %}

{% block pageheader %}
    <h1>Alternate Names List</h1>
    <p class="count">
        Displaying {{ aliases|length }} aliases of {{ aliases.getTotalItemCount }} total.
    </p>
 {% endblock %}

{% block body %}

    <div class='btn-toolbar pb-1'>
        <div class='btn-group ms-auto'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('alias_new') }}" class="btn btn-light">
                <span class="bi bi-plus-lg"></span> New
            </a>
            {% endif %}
            <a href="{{ path('alias_search') }}" class="btn btn-light">
                <span class="bi bi-search"></span> Search
            </a>
        </div>
    </div>

    {% include 'alias/partial/table.html.twig' %}

    <div class="navigation">
        {{ knp_pagination_render(aliases) }}
    </div>

{% endblock %}
